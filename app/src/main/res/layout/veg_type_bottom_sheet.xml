<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="@drawable/dialog_corner">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="채식 유형을 설명해줄게"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="채식주의는 소비하는 음식에 따라 7가지로 구분돼.
                        흔히들 생각하는 완전 채식주의자는 비건이야."
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="채식주의"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp">

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="비건"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>




        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/black"
            android:alpha="0.1"/>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="락토"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/black"
            android:alpha="0.1"/>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오보"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/black"
            android:alpha="0.1"/>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="락토오보"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="세미 채식주의"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp">

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="폴로"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>

        </TableRow>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@android:color/black"
            android:alpha="0.1"/>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="페스코"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp">
            </TextView>

        </TableRow>

    </TableLayout>

    <TextView
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="24dp"
        android:text="출처-서울시교육청"/>

    <Button
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:text="이해했어"
        android:textColor="@color/white"
        android:background="@drawable/black_btn_short"/>



</LinearLayout>